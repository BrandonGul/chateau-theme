<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>
{{ 'cart.css' | asset_url | stylesheet_tag }}

<cart-items class="cart">
  <div class="bold">ITEMS</div>
  <div class="cart__warnings">
    {%- if shop.customer_accounts_enabled and customer == null -%}
      <h2 class="cart__login-title">{{ 'sections.cart.login.title' | t }}</h2>
      <p class="cart__login-paragraph">
        {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
      </p>
    {%- endif -%}
  </div>

  <form action="{{ routes.cart_url }}" class="cart__contents critical-hidden" method="post" id="cart">
    <div class="cart-items js-contents" id="main-cart-items" data-id="{{ section.id }}">
      {%- for item in cart.items -%}
        <div class="cart-product">
          {% if item.image %}
            {{
              item.image 
              | image_url: width: 1500 
              | image_tag:
                loading: 'lazy',
                widths: '375, 750, 1100, 1500',
                alt: item.image.alt,
                style: 'position: relative; transform: none; left: 0; width: 100%; height: auto;'
            }}
          {% endif %}

          <div class="info">
            <div class="bold">
              {{ item.product.title | escape | upcase }}
            </div>
            <div class="stats">
              <div class="options">
                {%- for option in item.options_with_values -%}
                  {%- if option.name == "Size" -%}
                    <div>
                      {{ option.value }}
                    </div>
                  {%- else -%}
                    <div>
                      &nbsp;|&nbsp;{{ option.value }}
                    </div>
                  {%- endif -%}
                {%- endfor -%}
              </div>

              <div class="price">
                {{ item.original_price | money }}
                x 
                <span id="quantity-holder">{{ item.quantity }}</span>
              </div>
            </div>
            <div class="controls">
              <cart-remove-button
                id="Remove-{{ item.index | plus: 1 }}"
                data-index="{{ item.index | plus: 1 }}"
                >
                <a
                  href="{{ item.url_to_remove }}"
                  class="button button--tertiary"
                  aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}"
                >
                  <div>
                    REMOVE
                  </div>
                </a>
              </cart-remove-button>

              <quantity-input class="quantity cart-quantity">
                <button class="quantity__button no-js-hidden" name="minus" type="button">
                  <div class="minus"></div>
                </button>
                <input
                  class="quantity__input"
                  data-quantity-variant-id="{{ item.variant.id }}"
                  type="number"
                  name="updates[]"
                  value="{{ item.quantity }}"
                  {% # theme-check-disable %}
                  data-cart-quantity="{{ cart | item_count_for_variant: item.variant.id }}"
                  min="{{ item.variant.quantity_rule.min }}"
                  {% if item.variant.quantity_rule.max != null %}
                    max="{{ item.variant.quantity_rule.max }}"
                  {% endif %}
                  step="{{ item.variant.quantity_rule.increment }}"
                  {% # theme-check-enable %}
                  aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                  id="Quantity-{{ item.index | plus: 1 }}"
                  data-index="{{ item.index | plus: 1 }}"
                  style="display: none"
                >
                <button class="quantity__button no-js-hidden" name="plus" type="button">
                  <div class="plus"></div>
                </button>
              </quantity-input>
            </div>
          </div>
          <div class="cart-item__error" id="Line-item-error-{{ item.index | plus: 1 }}" role="alert">
            <small class="cart-item__error-text"></small>
          </div>
        </div>

      {%- endfor -%}
    </div>

    <p class="visually-hidden" id="cart-live-region-text" aria-live="polite" role="status"></p>
    <p class="visually-hidden" id="shopping-cart-line-item-status" aria-live="polite" aria-hidden="true" role="status">
      {{ 'accessibility.loading' | t }}
    </p>
  </form>

  <div class="total" id="main-cart-footer" data-id="{{ section.id }}">
      <div class="bold js-contents-total">
        TOTAL: {{ cart.total_price | money }}
      </div>

      <div class="checkout">
        <noscript>
          <button type="submit" class="cart__update-button button button--secondary" form="cart">
            {{ 'sections.cart.update' | t }}
          </button>
        </noscript>

        <button
          type="submit"
          id="checkout"
          class="cart__checkout-button button"
          name="checkout"
          {% if cart == empty %}
            disabled
          {% endif %}
          form="cart"
        >
          {{ 'sections.cart.checkout' | t | upcase }}
        </button>
      </div>
  </div>
</cart-items>

{% schema %}
{
  "name": "Cart",
  "class": "cart-section"
}
{% endschema %}
